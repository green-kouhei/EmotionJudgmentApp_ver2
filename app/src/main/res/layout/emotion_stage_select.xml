<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abackn"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/map" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/sui"
                android:layout_width="80dp"
                android:layout_height="52dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.04"
                android:background="#000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/mercury" />

            <ImageButton
                android:id="@+id/kin"
                android:layout_width="84dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/venus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/ti"
                android:layout_width="134dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:background="#000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/earth" />

            <ImageButton
                android:id="@+id/ka"
                android:layout_width="104dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:background="#000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/mars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/moku"
                android:layout_width="125dp"
                android:layout_height="119dp"
                android:background="#000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/jupiter" />

            <ImageButton
                android:id="@+id/dosei"
                android:layout_width="149dp"
                android:layout_height="99dp"
                android:layout_marginTop="60dp"
                android:background="#000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/saturn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/ten"
                android:layout_width="120dp"
                android:layout_height="156dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.11"
                android:background="#000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/uranus" />

            <ImageButton
                android:id="@+id/kai"
                android:layout_width="111dp"
                android:layout_height="85dp"
                android:layout_marginTop="70dp"
                android:background="#000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/neptune" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>